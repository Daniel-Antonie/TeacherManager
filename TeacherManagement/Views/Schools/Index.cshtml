@model IEnumerable<TeacherManagement.Models.School>

@{
    ViewData["Title"] = "Principal Details";
}

<h1>Add Teacher</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Principal</a>
</p>

<table class="table table-striped table-dark">
    <!--table-striped table-dark-->
        <thead class=".thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrincipleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchoolAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PrincipleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    <style>
                        .custom-btn {
                            background-color: white;
                            color: black;
                            border: 1px solid black; /* Optional: Add border for better visibility */
                        }

                            .custom-btn:hover {
                                background-color: lightblue;
                                color: white;
                            }

                    </style>

                    <a class="btn custom-btn" href="@Url.Action("Edit", new { id = item.SchoolID })">Edit</a> |
                    <a class="btn custom-btn" href="@Url.Action("Details", new { id = item.SchoolID })">Details</a> |
                    <a class="btn custom-btn" href="@Url.Action("Delete", new { id = item.SchoolID })">Delete</a>
               
                </td>
        </tr>
}
    </tbody>
</table>
